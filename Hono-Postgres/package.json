{
  "name": "hono-app",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development bun run --hot src/app/development.ts",
    "test": "jest",
    "prepare": "husky",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "db:push": "drizzle-kit generate && drizzle-kit push",
    "db:generate": "drizzle-kit generate"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@rajmazumder/grabenv": "^0.1.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.3",
    "http-status-codes": "^2.3.0",
    "postgres": "^3.4.7",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "latest",
    "@types/es6-shim": "^0.31.46",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/winston": "^2.4.4",
    "drizzle-kit": "^0.31.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}